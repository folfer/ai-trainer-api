generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}

model WorkoutSolicitation {
  id         String   @id @default(uuid())
  age        Int
  height     Float
  weight     Float
  gender     String
  goal       String
  result     String
  created_at DateTime @default(now())

  @@map("workout-solicitations")
}

model DietSolicitation {
  id                  String   @id @default(uuid())
  age                 Int
  height              Float
  weight              Float
  body_fat            Float?
  allergy             String?
  lactose_intolerance Boolean
  gluten_intolerance  Boolean
  diabetes            Boolean
  hypertension        Boolean
  gastritis           Boolean
  cholesterol         Float
  smoker              Boolean
  vegan               Boolean
  gender              String
  goal                String
  result              String
  created_at          DateTime @default(now())

  @@map("diet-solicitations")
}
