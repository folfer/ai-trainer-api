// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String                @id @default(uuid())
  name                    String
  email                   String                @unique
  password_hash           String
  age                     Int
  height                  Float
  weight                  Float
  gender                  String
  level                   String
  smoker                  Boolean
  diabetes                Boolean
  physicalActivity        Boolean
  lactose_intolerance     Boolean
  gluten_intolerance      Boolean
  gastritis               Boolean
  cholesterol             Float
  goal                    String
  body_fat                Float?
  allergy                 String?
  diet_price              String
  orthopedic_disfunction  String
  respiratory_disfunction String
  cardio_disfunction      String
  created_at              DateTime              @default(now())
  workoutSolicitations    WorkoutSolicitation[]
  dietSolicitations       DietSolicitation[]
  cardioSolicitations     CardioSolicitation[]

  @@map("users")
}

model WorkoutSolicitation {
  id               String   @id @default(uuid())
  age              Int
  height           Float
  weight           Float
  gender           String
  goal             String
  result           String
  level            String
  smoker           Boolean
  diabetes         Boolean
  physicalActivity Boolean
  created_at       DateTime @default(now())

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("workout-solicitations")
}

model DietSolicitation {
  id                  String   @id @default(uuid())
  age                 Int
  height              Float
  weight              Float
  body_fat            Float?
  allergy             String?
  lactose_intolerance Boolean
  gluten_intolerance  Boolean
  diabetes            Boolean
  hypertension        Boolean
  gastritis           Boolean
  cholesterol         Float
  smoker              Boolean
  gender              String
  goal                String
  diet_price          String
  result              String
  created_at          DateTime @default(now())

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("diet-solicitations")
}

model CardioSolicitation {
  id                      String   @id @default(uuid())
  age                     Int
  height                  Float
  weight                  Float
  cholesterol             Float
  diabetes                Boolean
  smoker                  Boolean
  orthopedic_disfunction  String
  respiratory_disfunction String
  cardio_disfunction      String
  gender                  String
  goal                    String
  result                  String
  level                   String
  created_at              DateTime @default(now())

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("cardio-solicitations")
}
